@model Shsict.Peccacy.Mvc.Models.ConsoleModels.ScheduleListDto

@section Styles {
    @Styles.Render("~/Content/css/jquery.datatables")
}

@section Scripts {
    <!-- DataTables -->
    @Scripts.Render("~/bundles/jquery.datatables")

    <script type="text/javascript">
        $(function() {
            $("#tbl-datatable").DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": true,
                "ordering": false,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "/Scripts/datatables/zh-CN.json"
                }
            });

            $("input.seconds").change(function() {
                if ($(this).val() !== "") {
                    $.post("@Url.Action("Update", "Scheduler")",
                        {
                            "key": $(this).parent().siblings("shedulekey").text(),
                            "seconds": $(this).val()
                        });
                }
            });

            $("input.isactive").change(function() {
                if ($(this).val() !== "") {
                    $.post("@Url.Action("Update", "Scheduler")",
                        {
                            "key": $(this).parent().siblings("shedulekey").text(),
                            "isactive": $(this).val()
                        });
                }
            });
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b><i class="fa fa-tasks"></i> 计划任务</b>
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> 管理控制台</a></li>
            <li class="active">计划任务</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tbl-datatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>任务名称</th>
                                    <th>任务类型</th>
                                    <th>轮询(秒)</th>
                                    <th>上次执行时间</th>
                                    <th>运行状态</th>
                                </tr>
                            </thead>
                            @if (Model.Schedules != null && Model.Schedules.Count > 0)
                            {
                                <tbody>
                                    @foreach (var m in Model.Schedules)
                                    {
                                        <tr>
                                            <td class="shedulekey">@m.ScheduleKey</td>
                                            <td>@m.ScheduleType</td>
                                            <td>
                                                <input type="text" class="form-control seconds" style="width: 100px" value="@m.Seconds" />
                                            </td>
                                            <td>@m.LastCompletedTime.ToShortDateString()</td>
                                            <td>
                                                <input type="text" class="form-control isactive" style="width: 100px" value="@m.IsActive" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
