@model Shsict.Peccacy.Mvc.Models.ConsoleModels.CameraSourceListDto

@section Styles {
    @Styles.Render("~/Content/css/jquery.datatables")
}

@section Scripts {
    <!-- DataTables -->
    @Scripts.Render("~/bundles/jquery.datatables")

    <script type="text/javascript">
        $(function () {
            $("#tbl-datatable").DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": true,
                "ordering": false,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "/Scripts/datatables/zh-CN.json"
                }
            });
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b><i class="fa fa-database"></i> 数据源管理</b>
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> 管理控制台</a></li>
            <li class="active">数据源管理</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tbl-datatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>数据源编号</th>
                                    <th>是否同步</th>
                                    <th>连接字符串</th>
                                    <th>视图名称</th>
                                    <th>最后时间戳</th>
                                    <th>备注</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            @if (Model.CameraSources != null && Model.CameraSources.Count > 0)
                            {
                                <tbody>
                                    @foreach (var m in Model.CameraSources)
                                    {
                                        <tr>
                                            <td>@m.CamNo</td>
                                            <td>@m.IsSync</td>
                                            <td></td>
                                            <td>@m.ConnString </td>
                                            <td>@m.ViewName </td>
                                            <td>@m.LastSyncTime.ToShortDateString()</td>
                                            <td>@m.Remark</td>
                                            <td>
                                                <button type="button" class="btn btn-info btn-xs" disabled="disabled">
                                                    <i class="fa fa-edit"></i> detail
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
